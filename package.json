{
  "name": "interface-serpro",
  "version": "1.0.0",
  "description": "Interface web para emissão de relatórios SERPRO",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon server.js",
    "build": "electron-builder"  
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^38.2.0",
    "electron-builder": "^24.13.3", 
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "serpro",
    "relatórios",
    "interface"
  ],
  "author": "",
  "license": "MIT",
  "build": {
  "appId": "com.reportx.app",
  "productName": "ReportX",
  "artifactName": "ReportX-Setup-${version}.${ext}",

  "directories": {
    "output": "dist_electron"
  },

  "files": [
    "main.js",
    "server.js",
    "RelaEcac.js",
    "index.html",
    "public/**",
    "resources/python/**",
    "resources/data/**",
    ".env"
  ],

  "extraResources": [
    {
      "from": "resources/",
      "to": "resources/"
    }
  ],

  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]     
      }
    ],
    "icon": "public/icon.ico",     
    "publisherName": "ReportX Sistemas LTDA", 
    "legalTrademarks": "ReportX 2025"
  },

  "nsis": {
    "oneClick": false,                     
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "ReportX",
    "installerIcon": "public/icon.ico",    
    "uninstallerIcon": "public/icon.ico",  
    "license": "LICENSE.txt",              
    "installerHeaderIcon": "public/icon.ico",
    "installerSidebar": "public/installer_splash.bmp", 
    "include": "build/installerHooks.nsh" 
  },

  "publish": [
    {
      "provider": "github",
      "owner": "seu_usuario_github",
      "repo": "reportx"
    }
  ]
  }
}

